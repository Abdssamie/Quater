# Quater Backend API - Production Environment Configuration
# This file contains production-specific environment variables
# IMPORTANT: Never commit this file with real secrets!

# ============================================================================
# Database Configuration (Production)
# ============================================================================
DB_HOST=your-production-db-host.database.azure.com
DB_PORT=5432
DB_NAME=quater_production
DB_USER=quater_admin
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# ============================================================================
# Redis Configuration (Production)
# ============================================================================
REDIS_HOST=your-production-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
REDIS_CONNECTION_STRING=${REDIS_HOST}:${REDIS_PORT},password=${REDIS_PASSWORD},ssl=True,abortConnect=False

# ============================================================================
# Authentication & Security (Production)
# ============================================================================
OPENIDDICT_ISSUER=https://api.quater.app
OPENIDDICT_AUDIENCE=quater_api
OPENIDDICT_SIGNING_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_MIN_64_CHARS_LONG

JWT_ISSUER=https://api.quater.app
JWT_AUDIENCE=quater_api
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_MIN_64_CHARS_LONG

# ============================================================================
# CORS Configuration (Production)
# ============================================================================
CORS_ORIGIN_1=https://app.quater.app
CORS_ORIGIN_2=https://www.quater.app
CORS_ORIGIN_3=capacitor://quater.app

# ============================================================================
# Application Configuration (Production)
# ============================================================================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080;https://+:8443

# ============================================================================
# Logging Configuration (Production)
# ============================================================================
LOG_LEVEL=Warning
LOG_PATH=/app/logs

# ============================================================================
# Monitoring & Telemetry
# ============================================================================
APPLICATION_INSIGHTS_KEY=
SENTRY_DSN=

# ============================================================================
# Email Configuration (Production)
# ============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=CHANGE_ME_TO_SENDGRID_API_KEY
SMTP_FROM=noreply@quater.app

# ============================================================================
# Backup Configuration (Production)
# ============================================================================
BACKUP_ENABLED=true
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_ACCOUNT=
BACKUP_STORAGE_KEY=

# ============================================================================
# Rate Limiting Configuration (Production)
# ============================================================================
RATE_LIMIT_AUTHENTICATED=100
RATE_LIMIT_ANONYMOUS=20
RATE_LIMIT_WINDOW_SECONDS=60
