# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_USER=quater_user
POSTGRES_PASSWORD=change_this_secure_password_123
POSTGRES_DB=quater_db

# Full connection string (alternative to individual settings)
DB_CONNECTION_STRING=Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_secure_password_123
REDIS_CONNECTION_STRING=${REDIS_HOST}:${REDIS_PORT},abortConnect=false,connectTimeout=5000,syncTimeout=5000

# ============================================================================
# Authentication & Security
# ============================================================================
# System Admin User ID (required for authorization system)
# This is the GUID of the system administrator user account
SYSTEM_ADMIN_USER_ID=eb4b0ebc-7a02-43ca-a858-656bd7e4357f

# OpenIddict Configuration
OPENIDDICT_ISSUER=http://localhost:8080
OPENIDDICT_AUDIENCE=quater_api
OPENIDDICT_SIGNING_KEY=CHANGE_THIS_TO_A_SECURE_KEY_MIN_32_CHARS_LONG_RANDOM_STRING

# JWT Configuration
JWT_ISSUER=http://localhost:8080
JWT_AUDIENCE=quater_api
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_KEY_MIN_32_CHARS_LONG_RANDOM_STRING

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGIN_1=http://localhost:5000
CORS_ORIGIN_2=http://localhost:8100
CORS_ORIGIN_3=capacitor://localhost

# ============================================================================
# Application Configuration
# ============================================================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=Information
LOG_PATH=/app/logs

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
BACKUP_PATH=/app/backups
BACKUP_RETENTION_DAYS=30

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_AUTHENTICATED=100
RATE_MOUS=20
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Docker Registry (for CI/CD)
# ============================================================================
DOCKER_REGISTRY=
IMAGE_NAME=quater-backend
VERSION=latest

# ============================================================================
# pgAdmin Configuration (Development Only)
# ============================================================================
PGADMIN_EMAIL=admin@quater.local
PGADMIN_PASSWORD=admin

