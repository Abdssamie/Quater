@page
@model Quater.Backend.Api.Pages.Account.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - Quater</title>
    <style>
        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #f0f2f5;
            color: #1a1a2e;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 1rem;
        }
        .card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.08);
            padding: 2.5rem 2rem;
            width: 100%;
            max-width: 400px;
        }
        .logo {
            text-align: center;
            margin-bottom: 1.5rem;
        }
        .logo h1 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #0066cc;
        }
        .logo p {
            font-size: 0.875rem;
            color: #666;
            margin-top: 0.25rem;
        }
        .error-banner {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #991b1b;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            margin-bottom: 1rem;
        }
        .field { margin-bottom: 1rem; }
        .field label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            margin-bottom: 0.375rem;
            color: #374151;
        }
        .field input {
            width: 100%;
            padding: 0.625rem 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.15s;
            outline: none;
        }
        .field input:focus {
            border-color: #0066cc;
            box-shadow: 0 0 0 3px rgba(0,102,204,0.1);
        }
        .field .validation-error {
            color: #991b1b;
            font-size: 0.8rem;
            margin-top: 0.25rem;
        }
        .btn {
            width: 100%;
            padding: 0.75rem;
            background: #0066cc;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.15s;
            margin-top: 0.5rem;
        }
        .btn:hover { background: #0052a3; }
        .btn:active { background: #004080; }
        .footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.75rem;
            color: #9ca3af;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="logo">
            <h1>Quater</h1>
            <p>Sign in to continue</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-banner">@Model.ErrorMessage</div>
        }

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="field">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" autocomplete="email" autofocus placeholder="you@example.com" />
                <span asp-validation-for="Email" class="validation-error"></span>
            </div>

            <div class="field">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" autocomplete="current-password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="validation-error"></span>
            </div>

            <button type="submit" class="btn">Sign In</button>
        </form>

        <div class="footer">
            Quater Water Quality Lab Management
        </div>
    </div>
</body>
</html>
