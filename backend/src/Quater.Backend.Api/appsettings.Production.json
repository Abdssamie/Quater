{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Quater": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true"
  },
  "OpenIddict": {
    "Issuer": "${OPENIDDICT_ISSUER}",
    "Audience": "${OPENIDDICT_AUDIENCE}",
    "AccessTokenLifetime": 3600,
    "RefreshTokenLifetime": 86400,
    
    "_comment_certificates": "Choose ONE of the following certificate loading strategies for each certificate type:",
    
    "_comment_strategy1": "Strategy 1: Base64 encoded PFX (Recommended for Docker/Kubernetes)",
    "EncryptionCertificateBase64": "${OPENIDDICT_ENCRYPTION_CERT_BASE64}",
    "EncryptionCertificatePassword": "${OPENIDDICT_ENCRYPTION_CERT_PASSWORD}",
    "SigningCertificateBase64": "${OPENIDDICT_SIGNING_CERT_BASE64}",
    "SigningCertificatePassword": "${OPENIDDICT_SIGNING_CERT_PASSWORD}",
    
    "_comment_strategy2": "Strategy 2: File path (Traditional deployments)",
    "EncryptionCertificatePath": "/app/certs/encryption.pfx",
    "SigningCertificatePath": "/app/certs/signing.pfx",
    
    "_comment_strategy3": "Strategy 3: Windows Certificate Store (Windows Server only)",
    "EncryptionCertificateThumbprint": "${OPENIDDICT_ENCRYPTION_CERT_THUMBPRINT}",
    "EncryptionCertificateStoreName": "My",
    "EncryptionCertificateStoreLocation": "LocalMachine",
    "SigningCertificateThumbprint": "${OPENIDDICT_SIGNING_CERT_THUMBPRINT}",
    "SigningCertificateStoreName": "My",
    "SigningCertificateStoreLocation": "LocalMachine"
  },
  "Jwt": {
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "SecretKey": "${JWT_SECRET_KEY}",
    "AccessTokenLifetime": 3600,
    "RefreshTokenLifetime": 86400
  },
  "Identity": {
    "Password": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredLength": 12
    },
    "Lockout": {
      "DefaultLockoutTimeSpan": "00:30:00",
      "MaxFailedAccessAttempts": 3,
      "AllowedForNewUsers": true
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "SignIn": {
      "RequireConfirmedEmail": true,
      "RequireConfirmedAccount": true
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "${CORS_ORIGIN_1}",
      "${CORS_ORIGIN_2}",
      "${CORS_ORIGIN_3}"
    ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "System": "Error",
        "Quater": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "${DB_CONNECTION_STRING}",
          "tableName": "logs",
          "needAutoCreateTable": true,
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ]
  },
  "Quartz": {
    "AuditLogArchival": {
      "Enabled": true,
      "RetentionDays": 365,
      "CronSchedule": "0 0 2 * * ?"
    }
  },
  "Sync": {
    "ConflictResolution": "ServerWins",
    "MaxRetries": 5,
    "RetryDelaySeconds": 10
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}"
  },
  "RateLimiting": {
    "AuthenticatedLimit": 100,
    "AnonymousLimit": 20,
    "WindowSeconds": 60
  },
  "Backup": {
    "Enabled": true,
    "BackupPath": "/app/backups",
    "RetentionDays": 90
  }
}
